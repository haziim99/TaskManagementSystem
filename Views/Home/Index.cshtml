@model IEnumerable<TaskManagementSystem.Models.TaskItem>

    @{
    ViewData["Title"] = "Home Page";
    }

    <div class="text-center">
        <h1 class="display-4">Task List</h1>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Priority</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Priority</td>
                <td>@item.Status</td>
                <td>
                    
        <form asp-action="TogglePriority" method="post">
            <input type="hidden" name="id" value="@item.Id" />
            <button type="submit" class="btn btn-sm btn-warning">Change Priority</button>
        </form>

                </td>
            </tr>
        }
        </tbody>
    </table>
