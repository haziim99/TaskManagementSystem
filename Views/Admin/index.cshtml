@model List<TaskManagementSystem.ViewModels.UserManagementViewModel>

    @{
    ViewData["Title"] = "Admin Dashboard";
    }

    <div class="main-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="page-title">
                <i class="bi bi-speedometer2"></i> Admin Dashboard
            </h1>
            <a asp-controller="Tasks" asp-action="Index" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left"></i> Back to Tasks
            </a>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="stats-card">
                    <div class="stats-icon primary">
                        <i class="bi bi-people"></i>
                    </div>
                    <div class="stats-number">@ViewBag.TotalUsers</div>
                    <div class="stats-label">Total Users</div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stats-card">
                    <div class="stats-icon success">
                        <i class="bi bi-list-check"></i>
                    </div>
                    <div class="stats-number">@ViewBag.TotalTasks</div>
                    <div class="stats-label">Total Tasks</div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stats-card">
                    <div class="stats-icon warning">
                        <i class="bi bi-person-badge"></i>
                    </div>
                    <div class="stats-number">@ViewBag.ManagerCount</div>
                    <div class="stats-label">Managers</div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stats-card">
                    <div class="stats-icon info">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <div class="stats-number">@ViewBag.AdminCount</div>
                    <div class="stats-label">Admins</div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="content-section">
                    <h3 class="mb-3">
                        <i class="bi bi-lightning"></i> Quick Actions
                    </h3>
                    <div class="d-flex flex-wrap gap-2">
                        <a asp-action="CreateUser" class="btn btn-primary">
                            <i class="bi bi-person-plus"></i> Add New User
                        </a>
                        <a asp-action="AllTasks" class="btn btn-info">
                            <i class="bi bi-list-task"></i> View All Tasks
                        </a>
                        <a asp-controller="Tasks" asp-action="Create" class="btn btn-success">
                            <i class="bi bi-plus-circle"></i> Create Task
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- User Management Table -->
        <div class="content-section">
            <h3 class="mb-3">
                <i class="bi bi-people-fill"></i> User Management
            </h3>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th><i class="bi bi-person"></i> Name</th>
                            <th><i class="bi bi-envelope"></i> Email</th>
                            <th><i class="bi bi-shield"></i> Role</th>
                            <th><i class="bi bi-calendar"></i> Join Date</th>
                            <th><i class="bi bi-list-check"></i> Tasks</th>
                            <th><i class="bi bi-gear"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle me-2">
                                        @user.FullName.Substring(0, 1).ToUpper()
                                    </div>
                                    <strong>@user.FullName</strong>
                                </div>
                            </td>
                            <td>@user.Email</td>
                            <td>
                                @switch (user.Role)
                                {
                                    case "Admin":
                                <span class="badge bg-danger">
                                    <i class="bi bi-shield-fill-check"></i> Admin
                                </span>
                                        break;
                                    case "Manager":
                                <span class="badge bg-warning">
                                    <i class="bi bi-person-badge"></i> Manager
                                </span>
                                        break;
                                    case "User":
                                <span class="badge bg-primary">
                                    <i class="bi bi-person"></i> User
                                </span>
                                        break;
                                    default:
                                <span class="badge bg-secondary">None</span>
                                        break;
                                }
                            </td>
                            <td>@user.JoinDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                <span class="badge bg-info">@user.TaskCount</span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="UserDetails" asp-route-id="@user.Id"
                                       class="btn btn-outline-info" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="EditUser" asp-route-id="@user.Id"
                                       class="btn btn-outline-primary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" class="btn btn-outline-danger"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteModal-@user.Id"
                                            title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>

                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteModal-@user.Id" tabindex="-1">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title">
                                                    <i class="bi bi-exclamation-triangle"></i> Confirm Delete
                                                </h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Are you sure you want to delete user <strong>@user.FullName</strong>?</p>
                                                <p class="text-danger">This will also delete all tasks created by this user!</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <style>
        .avatar-circle {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 0.875rem;
        }

        .table-hover tbody tr:hover {
            background-color: #f8f9fa;
            cursor: pointer;
        }
    </style>
