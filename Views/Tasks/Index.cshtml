@model IEnumerable<TaskManagementSystem.Models.TaskItem>

    @{
    ViewData["Title"] = "Tasks";
    }

    <div class="container main-container">
        <div class="row align-items-center mb-3">
            <div class="col-md-6 mb-2 mb-md-0">
                <div class="input-group">
                    <span class="input-group-text bg-transparent border-0">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" class="form-control search-input border-start-0" placeholder="Search for a task..." />
                </div>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> New Task
                </a>
            </div>
        </div>

        <div class="mb-3">
            <button class="btn btn-outline-secondary filter-btn active" data-filter="all">All</button>
            <button class="btn btn-outline-secondary filter-btn" data-filter="todo">Todo</button>
            <button class="btn btn-outline-secondary filter-btn" data-filter="inprogress">In Progress</button>
            <button class="btn btn-outline-secondary filter-btn" data-filter="completed">Completed</button>
        </div>

        <div class="content-section">
            <h2 class="mb-4">
                <i class="bi bi-list-task"></i> Current Tasks
            </h2>

            @if (Model != null && Model.Any())
        {
            @foreach (var task in Model)
            {
            <div class="card mb-3 task-card priority-@task.Priority.ToString().ToLower()" data-status="@task.Status.ToString().ToLower()">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="card-title mb-0">@task.Title</h5>
                        <span class="badge
                                @(task.Priority == TaskManagementSystem.Models.TaskPriority.Low ? "bg-success" :
                                  task.Priority == TaskManagementSystem.Models.TaskPriority.Medium ? "bg-primary" :
                                  task.Priority == TaskManagementSystem.Models.TaskPriority.High ? "bg-warning text-dark" :
                                  "bg-danger")">
                            @task.Priority
                        </span>
                    </div>
                    <p class="card-text">@task.Description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="badge
                                    @(task.Status == TaskManagementSystem.Models.TaskStatus.Todo ? "bg-secondary" :
                                      task.Status == TaskManagementSystem.Models.TaskStatus.InProgress ? "bg-info text-dark" :
                                      "bg-success") me-2">
                                @task.Status
                            </span>
                            @if (task.DueDate.HasValue)
                                {
                            <small class="text-muted">
                                <i class="bi bi-calendar3"></i> @task.DueDate.Value.ToString("MMM dd, yyyy")
                            </small>
                                }
                        </div>
                        <div>
                            <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-sm btn-outline-info ms-2">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-sm btn-outline-danger ms-2">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            }
        }
        else
        {
            <p class="text-muted">No tasks found.</p>
        }
        </div>
    </div>

    @section Scripts {
        <script>
    const searchInput = document.querySelector('.main-container .search-input');
    const taskCards = document.querySelectorAll('.task-card');
    searchInput?.addEventListener('input', function() {
        const query = this.value.toLowerCase();
        taskCards.forEach(card => {
            const title = card.querySelector('.card-title').textContent.toLowerCase();
            const description = card.querySelector('.card-text').textContent.toLowerCase();
            card.style.display = (title.includes(query) || description.includes(query)) ? '' : 'none';
        });
    });

    const filterButtons = document.querySelectorAll('.filter-btn');
    filterButtons.forEach(btn => {
        btn.addEventListener('click', function() {
            const filter = this.dataset.filter;
            filterButtons.forEach(b => b.classList.remove('active'));
            this.classList.add('active');
            taskCards.forEach(card => {
                const status = card.dataset.status;
                card.style.display = (filter === 'all' || status === filter) ? '' : 'none';
            });
        });
    });
        </script>
    }
