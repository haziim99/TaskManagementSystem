@model IEnumerable<TaskManagementSystem.Models.TaskItem>

@{
    ViewData["Title"] = "My Tasks";
    var isAdmin = ViewBag.IsAdmin ?? false;
    var isManager = ViewBag.IsManager ?? false;
}

<div class="main-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title">
            <i class="bi bi-card-checklist"></i> My Tasks
        </h1>
        @if (isManager || isAdmin)
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Task
            </a>
        }
    </div>

    <!-- Filters -->
    <div class="content-section mb-4">
        <form asp-action="Index" method="get">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">
                        <i class="bi bi-search"></i> Search
                    </label>
                    <input type="text" name="searchString" class="form-control" 
                           value="@ViewData["CurrentFilter"]" placeholder="Search tasks...">
                </div>
                <div class="col-md-3">
                    <label class="form-label">
                        <i class="bi bi-funnel"></i> Status
                    </label>
                    <select name="status" class="form-select">
                        <option value="">All Statuses</option>
                        <option value="0" selected="@(ViewData["StatusFilter"]?.ToString() == "0")">To Do</option>
                        <option value="1" selected="@(ViewData["StatusFilter"]?.ToString() == "1")">In Progress</option>
                        <option value="2" selected="@(ViewData["StatusFilter"]?.ToString() == "2")">Completed</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">
                        <i class="bi bi-flag"></i> Priority
                    </label>
                    <select name="priority" class="form-select">
                        <option value="">All Priorities</option>
                        <option value="0" selected="@(ViewData["PriorityFilter"]?.ToString() == "0")">Low</option>
                        <option value="1" selected="@(ViewData["PriorityFilter"]?.ToString() == "1")">Medium</option>
                        <option value="2" selected="@(ViewData["PriorityFilter"]?.ToString() == "2")">High</option>
                        <option value="3" selected="@(ViewData["PriorityFilter"]?.ToString() == "3")">Urgent</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-filter"></i> Filter
                    </button>
                </div>
            </div>
        </form>
    </div>

    <!-- Tasks List -->
    @if (Model.Any())
    {
        <div class="row">
            @foreach (var task in Model)
            {
                var isOverdue = task.DueDate.HasValue && task.DueDate.Value < DateTime.Now && task.Status != TaskManagementSystem.Models.TaskStatus.Completed;
                var priorityClass = task.Priority switch
                {
                    TaskManagementSystem.Models.TaskPriority.Low => "success",
                    TaskManagementSystem.Models.TaskPriority.Medium => "warning",
                    TaskManagementSystem.Models.TaskPriority.High => "danger",
                    TaskManagementSystem.Models.TaskPriority.Urgent => "dark",
                    _ => "secondary"
                };

                <div class="col-lg-6 col-xl-4 mb-4">
                    <div class="card task-card h-100 @(isOverdue ? "border-danger" : "")">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0">
                                    @if (task.IsCompleted)
                                    {
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-circle"></i>
                                    }
                                    @task.Title
                                </h5>
                                <span class="badge bg-@priorityClass">
                                    @task.Priority
                                </span>
                            </div>

                            @if (!string.IsNullOrEmpty(task.Description))
                            {
                                <p class="card-text text-muted small">
                                    @(task.Description.Length > 100 ? task.Description.Substring(0, 100) + "..." : task.Description)
                                </p>
                            }

                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="bi bi-calendar"></i>
                                    @if (task.DueDate.HasValue)
                                    {
                                        if (isOverdue)
                                        {
                                            <span class="text-danger fw-bold">
                                                Overdue: @task.DueDate.Value.ToString("MMM dd, yyyy")
                                            </span>
                                        }
                                        else
                                        {
                                            <span>Due: @task.DueDate.Value.ToString("MMM dd, yyyy")</span>
                                        }
                                    }
                                    else
                                    {
                                        <span>No due date</span>
                                    }
                                </small>
                            </div>

                            <!-- Assignment Info -->
                            @if (isAdmin || isManager)
                            {
                                <div class="mb-3">
                                    <small class="text-muted">
                                        <i class="bi bi-person-circle"></i>
                                        <strong>Created by:</strong> @(task.CreatedBy?.FullName ?? "Unknown")
                                    </small>
                                    <br>
                                    <small class="text-muted">
                                        <i class="bi bi-person-check"></i>
                                        <strong>Assigned to:</strong> @(task.AssignedTo?.FullName ?? "Unassigned")
                                    </small>
                                </div>
                            }

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <div>
                                    @switch (task.Status)
                                    {
                                        case TaskManagementSystem.Models.TaskStatus.Todo:
                                            <span class="badge bg-secondary">To Do</span>
                                            break;
                                        case TaskManagementSystem.Models.TaskStatus.InProgress:
                                            <span class="badge bg-warning">In Progress</span>
                                            break;
                                        case TaskManagementSystem.Models.TaskStatus.Completed:
                                            <span class="badge bg-success">Completed</span>
                                            break;
                                    }
                                </div>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@task.Id" 
                                       class="btn btn-outline-info" title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@task.Id" 
                                       class="btn btn-outline-primary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="ToggleComplete" asp-route-id="@task.Id" method="post" class="d-inline">
                                        <button type="submit" 
                                                class="btn @(task.IsCompleted ? "btn-outline-warning" : "btn-outline-success")" 
                                                title="@(task.IsCompleted ? "Mark Incomplete" : "Mark Complete")">
                                            <i class="bi @(task.IsCompleted ? "bi-arrow-counterclockwise" : "bi-check")"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="content-section text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <h3 class="mt-3 text-muted">No Tasks Found</h3>
            <p class="text-muted">
                @if (isManager || isAdmin)
                {
                    <span>Start by creating your first task!</span>
                }
                else
                {
                    <span>No tasks assigned to you yet.</span>
                }
            </p>
            @if (isManager || isAdmin)
            {
                <a asp-action="Create" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle"></i> Create Your First Task
                </a>
            }
        </div>
    }
</div>

<style>
    .task-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border-left: 4px solid #6366f1;
    }

    .task-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.1);
    }

    .task-card.border-danger {
        border-left-color: #dc3545;
    }
</style>