@model TaskManagementSystem.Models.TaskItem

@{
    ViewData["Title"] = "Delete Task";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3><i class="bi bi-exclamation-triangle-fill"></i> Delete Confirmation</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-circle-fill"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this task? This action cannot be
                        undone.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Title:</dt>
                        <dd class="col-sm-9">
                            <strong>@Model.Title</strong>
                        </dd>

                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                @Model.Description
                            }
                            else
                            {
                                <span class="text-muted">No description available</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9">
                            @{
                                var statusText = Model.Status switch
                                {
                                    TaskManagementSystem.Models.TaskStatus.Todo => "Todo",
                                    TaskManagementSystem.Models.TaskStatus.InProgress => "In Progress",
                                    TaskManagementSystem.Models.TaskStatus.Completed => "Completed",
                                    _ => "Unknown"
                                };
                            }
                            @statusText
                        </dd>

                        <dt class="col-sm-3">Priority:</dt>
                        <dd class="col-sm-9">
                            @{
                                var priorityText = Model.Priority switch
                                {
                                    TaskManagementSystem.Models.TaskPriority.Low => "Low",
                                    TaskManagementSystem.Models.TaskPriority.Medium => "Medium",
                                    TaskManagementSystem.Models.TaskPriority.High => "High",
                                    TaskManagementSystem.Models.TaskPriority.Urgent => "Urgent",
                                    _ => "Unknown"
                                };
                            }
                            @priorityText
                        </dd>

                        <dt class="col-sm-3">Created Date:</dt>
                        <dd class="col-sm-9">
                            @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                        </dd>
                    </dl>

                    <hr />

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash-fill"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>