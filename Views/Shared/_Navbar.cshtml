@using Microsoft.AspNetCore.Identity
@using TaskManagementSystem.Constants

@{
    var signInManager = Context.RequestServices.GetService<SignInManager<ApplicationUser>>();
    var userManager = Context.RequestServices.GetService<UserManager<ApplicationUser>>();

    var user = await userManager.GetUserAsync(User);
    var isAdmin = user != null && await userManager.IsInRoleAsync(user, Roles.Admin);
    var isManager = user != null && await userManager.IsInRoleAsync(user, Roles.Manager);
    var userRole = isAdmin ? "Admin" : isManager ? "Manager" : "User";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top shadow-sm rounded-bottom">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold text-primary" asp-controller="/" asp-action="Index">
            <i class="bi bi-list-check"></i> Task Manager
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            @if (signInManager.IsSignedIn(User))
            {
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Tasks" asp-action="Dashboard">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Tasks" asp-action="Index">
                        <i class="bi bi-card-checklist"></i> My Tasks
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Analytics" asp-action="Index">
                        <i class="bi bi-graph-up"></i> Analytics
                    </a>
                </li>

                @if (isAdmin)
                    {
                <li class="nav-item">
                    <a class="nav-link text-warning" asp-controller="Admin" asp-action="Index">
                        <i class="bi bi-shield-fill-check"></i> Admin Panel
                    </a>
                </li>
                    }
            </ul>

            <ul class="navbar-nav ms-auto">
                <!-- Notifications -->
                <li class="nav-item dropdown">
                    <a class="nav-link position-relative text-dark" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="bi bi-bell-fill"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="notification-badge">
                            0
                        </span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end notification-dropdown shadow" style="width: 320px;">
                        <li>
                            <div class="dropdown-header d-flex justify-content-between align-items-center">
                                <span class="fw-bold">Notifications</span>
                                <a href="#" class="text-decoration-none small" onclick="markAllAsRead(); return false;">Mark all as read</a>
                            </div>
                        </li>
                        <li><hr class="dropdown-divider" /></li>
                        <div id="notification-list" style="max-height: 400px; overflow-y: auto;">
                        <li class="dropdown-item text-center text-muted py-3">
                            <i class="bi bi-inbox"></i><br />
                            No notifications
                        </li>
        </div>
        <li><hr class="dropdown-divider" /></li>
        <li>
            <a class="dropdown-item text-center small" asp-controller="Notifications" asp-action="Index">
                View all notifications
            </a>
        </li>
        </ul>
        </li>

        <!-- User Menu -->
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                <i class="bi bi-person-circle"></i>
                @userManager.GetUserName(User)
                <span class="badge bg-secondary ms-1">@userRole</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow">
                <li class="dropdown-header">
                    <small class="text-muted">Logged in as @userRole</small>
                </li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                    <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                        <i class="bi bi-person"></i> My Profile
                    </a>
                </li>
                @if (isManager || isAdmin)
                            {
                <li>
                    <a class="dropdown-item" asp-controller="Tasks" asp-action="Create">
                        <i class="bi bi-plus-circle"></i> Create Task
                    </a>
                </li>
                            }
                @if (isAdmin)
                            {
                <li><hr class="dropdown-divider" /></li>
                <li>
                    <a class="dropdown-item text-warning" asp-controller="Admin" asp-action="Index">
                        <i class="bi bi-shield-fill-check"></i> Admin Dashboard
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Admin" asp-action="AllTasks">
                        <i class="bi bi-list-task"></i> All Tasks
                    </a>
                </li>
                            }
                <li><hr class="dropdown-divider" /></li>
                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="dropdown-item text-danger">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </form>
                </li>
            </ul>
        </li>
        </ul>
            }
            else
            {
        <ul class="navbar-nav ms-auto">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">
                    <i class="bi bi-box-arrow-in-right"></i> Login
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">
                    <i class="bi bi-person-plus"></i> Register
                </a>
            </li>
        </ul>
            }
        </div>
        </div>
    </nav>

    @section Scripts {

        <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/jquery.validation/1.19.5/jquery.validate.min.js"></script>
        <script src="https://cdn.jsdelivr.net/jquery.validation.unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>


        <script>
            $(document).ready(function () {
                loadNotificationCount();
                setInterval(loadNotificationCount, 30000);
            });

            function loadNotificationCount() {
                $.get('/Notifications/GetUnreadCount', function (data) {
                    const badge = $('#notification-badge');
                    if (data.count > 0) {
                        badge.text(data.count).show();
                    } else {
                        badge.hide();
                    }
                });
            }

            function markAllAsRead() {
                $.post('/Notifications/MarkAllAsRead', function () {
                    loadNotificationCount();
                    location.reload();
                });
            }

            function markAsRead(id) {
                $.post('/Notifications/MarkAsRead', { id: id }, function () {
                    loadNotificationCount();
                });
            }
        </script>
    }
