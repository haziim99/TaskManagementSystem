@model TaskManagementSystem.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-person-plus-fill" style="font-size: 3rem; color: #6366f1;"></i>
                        <h2 class="mt-3">Create Account</h2>
                        <p class="text-muted">Join Task Management System</p>
                    </div>

                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">
                                <i class="bi bi-person"></i> Full Name
                            </label>
                            <input asp-for="FullName" class="form-control" placeholder="John Doe" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope"></i> Email
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="john@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="bi bi-lock"></i> Password
                            </label>
                            <input asp-for="Password" class="form-control" placeholder="At least 6 characters" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="text-muted">Must contain: uppercase, lowercase, and digit</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="bi bi-lock-fill"></i> Confirm Password
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Re-enter password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Role" class="form-label">
                                <i class="bi bi-shield"></i> Role
                            </label>
                            <select asp-for="Role" class="form-select">
                                <option value="User">User</option>
                                <option value="Manager">Manager</option>
                                <option value="Admin">Admin</option>
                            </select>
                            <small class="text-muted">Select your role in the system</small>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3">
                            <i class="bi bi-check-circle"></i> Create Account
                        </button>

                        <div class="text-center">
                            <span class="text-muted">Already have an account?</span>
                            <a asp-action="Login" class="text-decoration-none">Login here</a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info Card -->
            <div class="card mt-3 bg-light">
                <div class="card-body">
                    <h6 class="mb-2"><i class="bi bi-info-circle"></i> Role Permissions:</h6>
                    <ul class="small mb-0">
                        <li><strong>User:</strong> View and manage own assigned tasks</li>
                        <li><strong>Manager:</strong> Create tasks and assign to team members</li>
                        <li><strong>Admin:</strong> Full system control, manage all users and tasks</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}